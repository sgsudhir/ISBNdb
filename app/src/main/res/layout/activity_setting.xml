<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isbndb.activity.SettingActivity"
    android:background="@drawable/bg_wood">
    <RelativeLayout
        android:id="@+id/layout_key_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_transparent"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/button_set_token_layout_setting"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Set"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_white_transparent"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/image_view_status_layout_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:background="@android:drawable/presence_online"
            android:layout_toLeftOf="@id/button_set_token_layout_setting"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_view_status_layout_setting">
            <EditText
                android:id="@+id/edit_text_apikey_layout_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:inputType="text"
                android:singleLine="true"
                android:hint="API Token"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
            <TextView
                android:id="@+id/text_view_apikey_layout_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </FrameLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/button_default_apikey_layout_setting"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/layout_key_layout_setting"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_transparent"
        android:text="Use Default Key"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/button_delete_history_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/button_default_apikey_layout_setting"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_transparent"
        android:text="Retriving History ..."
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textAllCaps="false"/>
</RelativeLayout>
